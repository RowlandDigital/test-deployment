{
  "name": "rowland-digital/test-deployment",
  "type": "project",
  "config": {
    "vendor-dir": "vendor",
    "allow-plugins": {
      "johnpbloch/wordpress-core-installer": true
    }
  },
  "require": {
    "php": ">=7.4",
    "ext-dom": "*",
    "johnpbloch/wordpress": "^6.2"
  },
  "extra": {
    "installer-paths": {
      "public_html/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "public_html/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "public_html/wp-content/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "public_html"
  },
  "scripts": {
    "phpcs": [
      "@php vendor/squizlabs/php_codesniffer/bin/phpcs --runtime-set ignore_warnings_on_exit true -n"
    ]
  }
}
